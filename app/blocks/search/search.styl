.search
	position absolute
	right 0
	height 100%
	background-color #1b1b1b
	&:before
		content ''
		position absolute
		left 5px
		top 14px
		background url('data:image/svg+xml;base64,') no-repeat center
		transition .15s ease-out
		transform rotate(-15deg)
		size 20px
		fill #fff
		z-index 0
	&__input
		width 30px
		height 33px
		font-size 18px
		color #fff
		background-color transparent
		border none
		transition .45s ease-in
		z-index 1
		&:focus
		&:active
		&.active
			margin-right 40px
			padding-left 30px
			width 18vw
			+below(1400px)
				width 50vw
			+below(500px)
				width 70vw


