.aside-cats
	margin-bottom 30px
	display block
	&__list
		margin 0
		padding-top 20px
		list-style none
	&__item
		position relative
		padding-left 20px
		border-bottom  1px solid #ededed
		&:after
		&:before
			position absolute
			top 17px
			left 0
			content ''
			background-color #111
			transform rotate(45deg)
			size 8px 2px
		&:after
			top 22px
			transform rotate(-45deg)
		a
			font-size 16px
			font-weight bold
			line-height 40px
		&:hover
			.aside-cats__item__dropdown
				a
					font-size 100%
					line-height 25px
		&__dropdown
			overflow hidden
			transition all .15s ease-in-out
			a
				display block
				font-size 0
				line-height 0
				transition all .15s ease-in-out
