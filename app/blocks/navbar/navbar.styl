.navbar
	padding 0 20px
	display block
	background-color #1b1b1b
	size 100% 49px
	.container
		position relative
	&__nav
		&__link
			margin-right 25px
			display inline-block
			font-size 14px
			font-weight bold
			letter-spacing 1.5px
			text-transform uppercase
			color #fff
			transition transform .9s
			&.is-hide
				transition transform .15s
				transform scale(0)
