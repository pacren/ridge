.navbar
	margin-bottom 20px
	padding 0 20px
	display block
	background-color #1b1b1b
	size 100% 49px
	.container
		position relative
	&__nav
		&__link
			position relative
			margin-right 25px
			display inline-block
			font-size 14px
			font-weight bold
			letter-spacing 1.5px
			text-transform uppercase
			cursor pointer
			color #fff
			transition transform .6s, color .15s ease-out
			+below(750px)
				display none
			&:hover
				.navbar__nav__link__dropdown
					transform scale(1) translateY(0)
			&__dropdown
				position absolute
				z-index 2
				top 100%
				left -15px
				padding 15px
				min-width 200px
				background-color #1b1b1b
				transition transform .2s
				transform scale(0) translateY(100%)
				.navbar__nav__link
					line-height 2
			&.is-hide
				transform scale(0) translateX(-100%)
				&:nth-child(1)
					transition transform 1.1s
				&:nth-child(2)
					transition transform 1s
				&:nth-child(3)
					transition transform .9s
				&:nth-child(4)
					transition transform .8s
				&:nth-child(5)
					transition transform .7s
				&:nth-child(6)
					transition transform .6s
				&:nth-child(7)
					transition transform .4s
				&:nth-child(8)
					transition transform .2s
