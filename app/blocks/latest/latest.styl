.latest
	display block
	margin-bottom 50px
	+below(560px)
		margin-bottom 30px
	&__content
		padding-top 30px
	&__load-more
		size 100% 40px
		background-color #26adec
		font-size 13px
		font-weight 700
		text-align center
		color #fff
		text-transform uppercase
		line-height 40px
		cursor pointer
		transition .2s ease-in-out
		&:hover
			background-color darken(#26adec, 10%)
			box-shadow inset 0 0 10px rgba(0,0,0, .3)
		&:active
			box-shadow inset 0 0 15px rgba(0,0,0, .5)
