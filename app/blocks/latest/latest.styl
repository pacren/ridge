.latest
	margin-bottom 50px
	display block
	+below(560px)
		margin-bottom 30px
	&__content
		padding-top 30px
	&__load-more
		font-size 13px
		font-weight 700
		line-height 40px
		text-align center
		text-transform uppercase
		cursor pointer
		color #fff
		background-color #26adec
		transition .2s ease-in-out
		size 100% 40px
		&:hover
			background-color darken(#26adec, 10%)
		&:active
			box-shadow inset 0 0 15px rgba(0, 0, 0, .5)
