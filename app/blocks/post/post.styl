.post
	display block
	&__title
		margin-bottom 20px
		font-size 38px
		line-height 48px
		color #111

	&__meta
		text-align right
		&__author
			color #aaa
			span
				color #444
		&__date
			color #aaa
			margin-x 10px
		&__comments
			color #444
			&__icon
				position relative
				top 0px
				margin-right 5px
				size 14px 12px
				fill #444

	&__content
		img
			margin-y 30px
			&.float-left
				float left
				margin-right 30px
				+below(500px)
					float none
					margin-right 0
			&.float-right
				float right
				margin-left 30px
				+below(500px)
					float none
					margin-left 0
		h3
			margin-bottom 20px
			font-size 25px
			font-weight bold
			color #111
		p
			margin-bottom 20px
			font-size 18px
			line-height 1.5

		blockquote
			margin-y 20px
			padding-left 30px
			display block
			font-size 22px
			line-height 25px
			color #111
			border-left 5px solid #ec2626

	&__tags
		margin-y 35px
		&__title
			background #000
			padding 3px 10px
			color white
			font-size 11px
			line-height 1
			text-transform uppercase
			margin-right 10px
		&__keys
			color #ec2626
			font-size 13px
			font-weight 600
			line-height 24px

	&__author
		border-top 1px solid #ededed
		border-bottom 1px solid #ededed
		margin-bottom 30px
		padding-y 50px
		display flex
		&__ava
			size 100px
			border-radius 50%
			overflow hidden
			flex-shrink 0
			object-fit cover
			+below(500px)
				size 60px
		&__info
			padding-left 30px
		&__name
			color #111
			font-size 18px
			font-weight bold
			line-height 24px
			margin-bottom 15px
		&__desc
			color #4b4b4b
			font-weight 14px
			line-height 20px
			margin-bottom 10px
		&__contacts
			font-size 14px
