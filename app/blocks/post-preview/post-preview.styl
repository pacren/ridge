.post-preview
	margin-bottom 30px
	padding-bottom 30px
	display block
	border-bottom 1px solid #ededed
	size 47% auto
	+below(560px)
		width 100%
	.trending-posts__content > &:not(:nth-child(1)):not(:nth-child(2))
	&.post-sm
		margin-bottom 15px
		padding-bottom 15px
		@extends .flex-between-h
		.post-preview__content
			width 100%
		.post-preview__text
			display none
		.post-preview__title
			margin-bottom 15px
			font-size 14px
			line-height 20px
		.post-preview__img
			margin 0 10px 0 0
			size 104px 78px
			flex-grow 1
			flex-shrink 0
			flex-basis 104px

	.latest__content > &:nth-child(1)
	.latest__content > &:nth-child(2)
	.latest__content > &:nth-child(3)
	&.post-line
		width 100%
		@extends .flex-between-h
		+below(560px)
			flex-wrap wrap
		.post-preview__title
			font-size 20px
			line-height 27px
		.post-preview__img
			margin 0 24px 0 0
			size 265px 199px
			flex-grow 1
			flex-shrink 0
			flex-basis 265px
			+below(560px)
				size 100% auto
				margin 0 0 20px 0

	.latest__content > &:nth-child(4)
	&.post-big
		width 100%
		.post-preview__title
			font-size 28px
			+below(560px)
				font-size 18px
		.post-preview__text
			display none
		.post-preview__img
			max-height 500px
			overflow hidden
			img
				height auto
	&:hover
		.post-preview__title
			color #26adec
		.post-preview__img
			filter saturate(1.4) contrast(1.2)
	&__img
		margin-bottom 25px
		display block
		transition .15s ease-out
		size 100% auto
		object-fit cover
		img
			size 100%
	&__title
		margin-bottom 20px
		display block
		font-size 18px
		color #111
		transition .15s ease-out
	&__text
		margin-bottom 20px
		display block
		font-size 13px
		color #7b7b7b
	&__meta
		display block
		font-size 11px
	&__author
		margin-right 15px
		color #444
	&__date
		margin-right 15px
		color #7b7b7b
	&__comments
		color #444
		&__icon
			position relative
			top 2px
			margin-right 5px
			size 14px 12px
			fill #444
