include ./imposts_item

mixin imposts(posts)
	+b.imposts.flex-between-h&attributes(attributes)
		+e.col
			+imposts_item(posts[0][0], posts[0][1])
			+imposts_item(posts[1][0], posts[1][1])
		+e.col
			+imposts_item(posts[2][0], posts[2][1], true).big
		+e.col
			+imposts_item(posts[3][0], posts[3][1])
			+imposts_item(posts[4][0], posts[4][1])
